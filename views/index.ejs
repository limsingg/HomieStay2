  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto text-center">
        <h1 class="display-4 fw-bold mb-4"><%= translations ? translations.homeTitle : 'ðŸ¡ Kanowit HomieStay â€“ Easy Rental, Comfortable Stay!' %></h1>
        <p class="lead mb-5"><%= translations ? translations.homeSubtitle : 'Looking for a place in Kanowit? We offer safe, clean, and affordable rooms for both long-term and short-term stays!' %></p>
      </div>
    </div>
  </div>
</div>

<!-- Discount CSS -->
<style>
  .discount-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: #dc3545;
    color: white;
    padding: 0.2rem 0.5rem;
    border-radius: 0.5rem;
    font-size: 0.8rem;
    font-weight: bold;
    z-index: 2;
  }

  .pulse-animation {
    animation: pulse 1.5s infinite;
  }

  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.7; }
    100% { opacity: 1; }
  }
</style>

<!-- Special Discount Callout -->
