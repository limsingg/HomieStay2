<%- include('../partials/header') %>

<div class="container">
  <div class="row justify-content-center mt-5 pt-5">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow">
        <div class="card-body p-5">
          <h2 class="text-center mb-4"><%= translations ? translations.hostLogin : 'Host Login' %></h2>

          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger">
              <%= translations ? translations.invalidPassword : 'Invalid password' %>
            </div>
          <% } %>

          <form action="/admin/login" method="POST">
            <div class="mb-4">
              <label for="password" class="form-label"><%= translations ? translations.password : 'Password' %></label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary py-2"><%= translations ? translations.login : 'Login' %></button>
            </div>
          </form>

          <div class="mt-4 text-center">
            <a href="/" class="text-decoration-none">
              <i class="fas fa-arrow-left me-1"></i> <%= translations ? translations.backToHome : 'Back to Home' %>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>